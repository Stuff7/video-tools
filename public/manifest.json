{
  "manifest_version": 2,
  "name": "Video Tools",
  "version": "1.2",
  "description": "Tools for video",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "content/style.css"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Video Tools",
    "default_popup": "extension/index.html"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "video-tools@stuff7.github.io"
    }
  }
}
