{
  "name": "video-tools",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.extension.ts",
    "build": "pnpm clean && pnpm type-check && pnpm build:content && pnpm build:ext && node postbuild.js && pnpm build:xpi",
    "build:content": "pnpm build-only --config vite.config.ts",
    "build:ext": "pnpm build-only --config vite.config.extension.ts",
    "build:xpi": "web-ext build -o -s dist -a dist -n video-tools.xpi",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "svelte-check --tsconfig tsconfig.app.json",
    "lint": "eslint . --ext .svelte,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.4.3",
    "@tsconfig/svelte": "^4.0.1",
    "@types/firefox-webext-browser": "^111.0.1",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "sass": "^1.64.1",
    "svelte": "^3.59.2",
    "svelte-check": "^3.4.6",
    "svelte-preprocess": "^5.0.4",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  }
}
